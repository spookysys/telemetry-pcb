  for (j = 1; j < i; j++) {
    strsplit(a, newDatabase[j], '\t');				// Split a record into a temp array
    if (lookup(Database, a[0], 1) == "") {
      Database[NumberOfData++] = newDatabase[j];
      k++;
    }
  }
  sprintf(fileName, "Merge completed, %d new records added.", k);
  dlgMessageBox(fileName);
